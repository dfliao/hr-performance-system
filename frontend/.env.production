# Production environment variables
VITE_APP_TITLE=HR 績效管理系統

# API Configuration (will be replaced by Docker environment)
VITE_API_URL=${API_URL}
VITE_API_TIMEOUT=30000

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar

# Production Features
VITE_DEV_TOOLS=false
VITE_MOCK_API=false
VITE_DEBUG_MODE=false

# External Services (will be replaced by Docker environment)
VITE_SYNOLOGY_DRIVE_URL=${SYNOLOGY_DRIVE_URL}
VITE_REDMINE_URL=${REDMINE_URL}
VITE_CHAT_WEBHOOK_URL=${CHAT_WEBHOOK_URL}

# Authentication
VITE_LDAP_ENABLED=true
VITE_DEMO_MODE=false
VITE_TOKEN_REFRESH_THRESHOLD=300000

# Chart and Analytics
VITE_CHART_THEME=light
VITE_ENABLE_ANIMATIONS=true

# Logging
VITE_LOG_LEVEL=warn
VITE_ENABLE_CONSOLE_LOGS=false