# Development environment variables
VITE_APP_TITLE=HR 績效管理系統

# API Configuration
VITE_API_URL=http://localhost:8004
VITE_API_TIMEOUT=30000

# File Upload Configuration  
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar

# Development Features
VITE_DEV_TOOLS=true
VITE_MOCK_API=true
VITE_DEBUG_MODE=true

# External Services
VITE_SYNOLOGY_DRIVE_URL=https://drive.synology.local
VITE_REDMINE_URL=https://redmine.synology.local
VITE_CHAT_WEBHOOK_URL=https://chat.synology.local/webhooks

# Authentication
VITE_LDAP_ENABLED=false
VITE_DEMO_MODE=true
VITE_TOKEN_REFRESH_THRESHOLD=300000

# Chart and Analytics
VITE_CHART_THEME=light
VITE_ENABLE_ANIMATIONS=true

# Logging
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGS=true